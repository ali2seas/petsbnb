   <%= form_tag pets_path, class:"form-inline", method: :get do %>
    <%= text_field_tag :address, params[:query],
    class: "form-control",
    placeholder: "Search by location"
    %>
    <%= text_field_tag :query, params[:query],
    class: "form-control",
    placeholder: "Search by keyword"
    %>
    <%= select_tag :category, options_for_select(["Dog", "Cat", "Rabbit", "Reptile", "Other"]),
    class: "form-control",
    placeholder: "Find a pet"
    %>
    <%= submit_tag "search", class: "btn btn-primary btn-lg" %>
    <% end %>

