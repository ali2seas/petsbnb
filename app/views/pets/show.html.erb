<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1494947665470-20322015e3a8?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8e64be3b9dcb29b57f6034eeccc6561e&auto=format&fit=crop&w=1950&q=80');">
  <div class="banner-content">
    <h2><%= @pet.name %>'s Profile</h2>
  </div>
</div>

<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6 card" >
        <%= cl_image_tag @pet.photo.url, width: 400, height: 400, crop: :fit, class:"card"%>
      </div>
        <div class="col-md-6">
          <h2><%= @pet.name %></h2>
          <p><strong>Address:</strong> <%= @pet.address %></p>
          <p><strong>Category:</strong> <%= @pet.category %></p>
          <p><strong>Age:</strong> <%= @pet.age %></p>
          <p><strong>Size:</strong> <%= @pet.size %></p>
        </div>
        <div class="col-md-6 box">
          <div><%= link_to "Book #{@pet.name}", new_pet_booking_path(@pet), class:"btn btn-primary button" %></div>
          <div><%= link_to 'Edit Info', edit_pet_path(@pet), class:"btn btn-success button" %></div>
          <div><%= link_to 'Delete Pet', @pet, class:"btn btn-danger button", method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
      <div class="col-md-12 text-center back-link">
        <%= link_to "Back to all pets", pets_path %>
        <%= link_to "Previous pet", pet_path(Pet.prev(@pet)) %>
        <%= link_to "Next pet", pet_path(Pet.next(@pet)) %>
      </div>
    </div>
</div>
</div>
